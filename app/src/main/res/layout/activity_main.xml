<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainpage"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="30dp"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="WAY TO SUCCESS"
        />
<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/viewPagerImageSlider"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingStart="80dp"
    android:paddingEnd="80dp"
    />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/techdomain"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/categories_button"
            android:gravity="center"
            android:text="TECH DOMAINS"
            android:textColor="@color/white"
            android:onClick="tech"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hackathons"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/categories_button"
            android:gravity="center"
            android:text="HACKATHONS"
            android:textColor="@color/white"
            android:onClick="hackathon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/techdomain" />

        <TextView
            android:id="@+id/opensource"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/categories_button"
            android:gravity="center"
            android:text="OPEN SOURCE"
            android:textColor="@color/white"
            android:onClick="opensource"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hackathons" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/categories_button"
            android:gravity="center"
            android:text="INTERNSHIPS"
            android:textColor="@color/white"
            android:onClick="intern"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opensource" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>